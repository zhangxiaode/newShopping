/**index.wxss**/

page {
  height: 100%;
}

.carte {
  background: #f2f2f2;
  position: relative;
  height: 100%;
}

.carteWrap {
  height:100%;overflow:auto;
}

.carteList {
}

.carteList .carteBox {
}

.carteList .carteHd {
  height: 100rpx;
  text-align: center;
}

.carteList .carteHd text {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  padding: 0 30px;
}

.carteList .carteHd text:before, .carteList .carteHd text:after {
  content: "";
  position: absolute;
  left: -60rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 3rpx;
  background: #ceccd7;
  width: 60rpx;
}

.carteList .carteHd text:after {
  left: auto;
  right: -30px;
}

.carteList .carteBd {
  overflow: hidden;padding:0 15rpx;
}
.carteList .carteBd .carteItem{
  float:left;
}
.copyRight {
  color: #b6b3b6;
  font-size: 24rpx;
  text-align: center;
  padding: 180rpx 0 45rpx;
}

.carteMenusMask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: rgba(0, 0, 0, 0.65);
  transition: all 0.3s;
  display: none;
}

.showMenuMask {
  display: block;
}

.carteMenus {
  position: absolute;
  left: -200rpx;
  top: 0;
  bottom: 0;
  z-index: 10;
  transition: all 0.3s;
}

.showMenu {
  left: 0;
}

.carteMenus .menuList {
  background: #fff;
  width: 200rpx;
  height: 100%;
}

.carteMenus .menuList .menuItem {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 15rpx;
  overflow: hidden;
  font-size: 30rpx;
  text-align: center;
}

.carteMenus .menuList .actived {
  background: #f2f2f2;
  color: #ee8441;
}

.carteMenus .openMenus {
  background: #fff;
  width: 60rpx;
  height: 100rpx;
  padding-right: 15rpx;
  position: absolute;
  top: 50%;
  right: -74rpx;
  transform: translateY(-50%);
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.carteMenus .openMenus image {
  width: 35rpx;
  height: 35rpx;
}

.carteMenus .openMenus text {
  font-size: 22rpx;
  color: #8e8c8f;
}

.basket {
  border-radius: 63rpx;
  border: solid 5rpx #fff;
  background: rgba(220, 80, 50, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 116rpx;
  height: 116rpx;
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
}

.basket image {
  width: 42rpx;
  height: 42rpx;
}

.basket text {
  font-size: 24rpx;
  color: #fff;
}
