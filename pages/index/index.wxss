/**index.wxss**/
.menu{
  position:absolute;left:0;top:0;bottom:100rpx;
  width:220rpx;
  background:#f2f2f2;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.menu .menuItem{
  height:90rpx;line-height:90rpx;
  color: #656565;font-size:34rpx;font-family: "Microsoft Yahei";
  padding-left:20rpx;
}
.menu .menuItem.actived{
  font-size:32rpx;color:#ffa131;
  background:#fff;
}
.cookList{
  position:absolute;left:220rpx;top:0;bottom:100rpx;right:0;
  width:auto;
}
.cookList .cookHd{
  font-size:30rpx;color:#333;
  padding:20rpx;
}
.cookList .cookHd:before{
  float:left;content:"";width:6rpx;height:100%;
  background:#ffa131;
  margin-right:10rpx;
}
.cart{
  display:flex;justify-content: space-between;align-items: center;
  position:fixed;bottom:0;left:0;width:100%;height:100rpx;
  background:rgb(91, 196, 245);
}
.cart image{
  width:80rpx;height:80rpx;color:#fff;
  margin:10rpx;
}
.cart text{
  flex:1;color:#fff;
}
.cart button{
  color:#fff;font:normal 36rpx/100rpx "Microsoft Yahei";
  border-radius:0;background:#1890ff;border:none;
  width:200rpx;height:100rpx;
}
.cartList{
  position:fixed;bottom:100rpx;left:0;z-index:9;width:100%;
  background:#fff;transition: all 0.3s;
  transform-origin: center bottom;
  transform:scaleY(0);
}
.cartList.showList{
  transform:scaleY(1);
}
.cartList .cartItem{
  display:flex;justify-content: space-between;align-items: center;
  border-bottom:solid 2rpx #eee;
  height:140rpx;padding:0 20rpx;
}
.cartItem .describe{
  flex:1;display:flex;flex-direction: column;justify-content: space-between;align-items: flex-start;
}
.cartItem .describe .goodsName{
  font:normal 32rpx "Microsoft Yahei";
}
.cartItem .describe .goodsPrice{
  color:#f00;font:bold 42rpx "Microsoft Yahei";
}
.cartItem .changeNum{
  display:flex;justify-content:flex-end;align-items: center;
}
.cartItem .cookIcon{
  width:48rpx;height:48rpx;border-radius:24rpx;
}
.cartItem .num{
  margin:0 10rpx;color:#333;
  flex:1;
}