<!--index.wxml-->
<view class="userCenter">
  <view class="userInfo">
    <view class="userItem myGrade">
      <image src="../../assets/timeIcon.svg"></image>
      <view class="infoName">当前等级</view>
      <view class="infoValue">V{{myInfo.grade}}平民</view>
    </view>
    <view class="userItem userItemBig myInfo">
      <!-- <image src="{{myInfo.avatarUrl}}"></image> -->
      <!-- <view class="infoName">{{myInfo.nickName}}</view> -->
      <open-data class="infoPhoto" type="userAvatarUrl"></open-data>
      <open-data class="infoName" type="userNickName"></open-data>
      <view class="infoValue">立即绑定手机号</view>
    </view>
    <view class="userItem myIntegral">
      <image src="../../assets/timeIcon.svg"></image>
      <view class="infoName">当前积分</view>
      <view class="infoValue">{{myInfo.fraction}}</view>
    </view>
  </view>
  <view class="section">
    <arrowBtn arrowData="{{myVip}}"></arrowBtn>
  </view>
  <view class="section">
    <arrowBtn arrowData="{{coupon}}"></arrowBtn>
    <arrowBtn arrowData="{{myOrder}}"></arrowBtn>
    <arrowBtn arrowData="{{myPlace}}"></arrowBtn>
  </view>
  <view class="section">
    <arrowBtn arrowData="{{activities}}"></arrowBtn>
  </view>
  <view class="section">
    <arrowBtn arrowData="{{personalInfo}}"></arrowBtn>
  </view>
</view>
