/**index.wxss**/
page{
  height:100%;
}
.detail{
  background:#eeeeee;
}
.goodsPhoto{
  position:relative;
  height:650rpx;
}
.goodsPhoto > image{
  width:100%;height:100%;
}
.goodsPhoto .likes{
  background:rgba(0,0,0,0.5);border-radius:30rpx;
  padding:0 30rpx;height:60rpx;
  position:absolute;bottom:40rpx;right:25rpx;
}
.goodsPhoto .likes image{
  float:left;width:40rpx;height:40rpx;margin:10rpx 0;
}
.goodsPhoto .likes text{
  font-size:30rpx;text-align:center;color:#fff;
  float:left;line-height:60rpx;
}
.goodsPhoto .liked text{
  color:#EB473D;
}
.goodsInfo{
  padding:0 20rpx;background:#fff;
}
.goodsInfo .goodsName{
  font-size:38rpx;
  padding:20rpx 0;
}
.goodsInfo .goodsSales{
  font-size:26rpx;color:#727272;
}
.goodsInfo .price{
  overflow: hidden;
  padding:20rpx 0;
}
.goodsInfo .price text{
  float:left;font-size:32rpx;color:#d73637;
}
.goodsInfo .price .goodsEvals{
  float:right;
}
.goodsInfo .price .goodsEvals image{
  width:32rpx;height:32rpx;
}
.goodsFlavor{
  margin:20rpx 0;padding:0 20rpx;
  background:#fff;overflow: hidden;
}
.goodsFlavor .arrowBtnWrap{
  margin-top:-2rpx;
}
.goodsDetail{
  background:#fff;
}
.goodsDetail .goodsDetailHd{
  font-size:30rpx;font-weight:bold;
  padding:45rpx 20rpx 25rpx 20rpx;
}
.goodsDetail .goodsDetailBd{
  font-size:28rpx;color:#5f5f5f;line-height:1.5;
  padding:0 20rpx 20rpx;
}
.copyRight{
  color:#b6b3b6;font-size:24rpx;text-align:center;
  padding:60rpx 0 156rpx;
}
.addCart{
  position:fixed;bottom:0;left:0;z-index:3;width:100%;box-sizing: border-box;
  border-top:solid 2rpx #e4e4e4;background:#fff;
  height:126rpx;padding:25rpx 20rpx;
}
.addCart .cartTit{
  float:left;line-height:76rpx;
  font-size:32rpx;
}
.addCart .nums{
  float:left;overflow:hidden;
  margin-left:20rpx;
}
.addCart .nums image{
  width:40rpx;height:40rpx;
  margin:16rpx;
}
.addCart .nums .numsBtn{
  float:left;width:72rpx;height:72rpx;
  border:solid 2rpx #e3e3e3;
  position:relative;
}
.addCart .nums .numsBtn.disabled:after{
  position:absolute;top:0;left:0;
  width:100%;height:100%;
  background:rgba(155,155,155,0.3);
  content:"";
}
.addCart .nums input, .addCart .nums .replaceInput{
  float:left;width:92rpx;height:72rpx;line-height:72rpx;
  text-align:center;font-size:26rpx;
  border:solid 2rpx #e3e3e3;
  margin:0 -2rpx;
}
.addCart .addCartBtn{
  float:right;width:200rpx;height:76rpx;line-height:76rpx;
  text-align:center;font-size:32rpx;color:#fff;
  border-radius:38rpx;background:#d94445;
}